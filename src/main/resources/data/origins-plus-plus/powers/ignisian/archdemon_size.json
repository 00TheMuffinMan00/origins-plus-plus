{
	"type":"origins:action_on_callback",
	"name": "Archdemon",
	"description": "As an archdemon, you are 25% larger and have longer arms.",
	"execute_chosen_when_orb":true,
	"entity_action_chosen":{
	   "type":"origins:and",
	   "actions":[
		  {
			 "type":"origins:execute_command",
			 "command":"scale set pehkui:height 1.25 @s",
			 "permission_level":4
		  },
		  {
			 "type":"origins:execute_command",
			 "command":"scale set pehkui:width 1.25 @s",
			 "permission_level":4
		  }
	   ]
	},
	"entity_action_respawned":{
	   "type":"origins:and",
	   "actions":[
		  {
			 "type":"origins:execute_command",
			 "command":"scale set pehkui:height 1.25 @s",
			 "permission_level":4
		  },
		  {
			 "type":"origins:execute_command",
			 "command":"scale set pehkui:width 1.25 @s",
			 "permission_level":4
		  },
		  {
			 "type":"origins:execute_command",
			 "command":"resource set @s origins-plus-plus:ignisian/ignisian_zenith 0",
			 "permission_level":4
		  }
	   ]
	},
	"entity_action_lost":{
	   "type":"origins:and",
	   "actions":[
		  {
			 "type":"origins:execute_command",
			 "command":"scale set pehkui:height 1 @s",
			 "permission_level":4
		  },
		  {
			 "type":"origins:execute_command",
			 "command":"scale set pehkui:width 1 @s",
			 "permission_level":4
		  }
	   ]
	}
}