{
	"type":"origins:multiple",
	"counter":{
		"type":"origins:resource",
		"min":1,
		"max":8
	},
	"cycle":{
		"type":"origins:active_self",
		"key":"key.origins.secondary_active",
		"entity_action":{
			"type":"origins:if_else",
			"condition":{
				"type":"origins:sneaking"
			},
			"if_action":{
				"type":"origins:if_else",
				"condition":{
					"type":"origins:resource",
					"resource":"*:*_counter",
					"comparison":"<=",
					"compare_to":1
				},
				"if_action":{
					"type":"origins:modify_resource",
					"resource":"*:*_counter",
					"modifier":{
						"operation":"set_total",
						"value":8
					}
				},
				"else_action":{
					"type":"origins:change_resource",
					"resource":"*:*_counter",
					"change":-1
				}
			},
			"else_action":{
				"type":"origins:if_else",
				"condition":{
					"type":"origins:resource",
					"resource":"*:*_counter",
					"comparison":">=",
					"compare_to":8
				},
				"if_action":{
					"type":"origins:modify_resource",
					"resource":"*:*_counter",
					"modifier":{
						"operation":"set_total",
						"value":1
					}
				},
				"else_action":{
					"type":"origins:change_resource",
					"resource":"*:*_counter",
					"change":1
				}
			}
		}
	}
}