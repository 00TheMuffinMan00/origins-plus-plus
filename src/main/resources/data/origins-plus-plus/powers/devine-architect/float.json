			"effect":"wither",
			"amplifier":1
		},
		"condition":{
			"type":"origins:power_active",
			"power":"*:*_toggle"
		}
	},
	"float": {
        "type": "origins:stacking_status_effect",
        "condition": {
            "type": "origins:resource",
            "inverted": false,
            "comparison": "==",
            "resource": "*:*_toggle",
            "compare_to": 1
        },
        "duration_per_stack": 20,
        "min_stacks": 0,
        "max_stacks": 1,
        "effect": {
            "duration": 0,
            "show_particles": false,
            "show_icon": false,
            "effect": "levitation",
            "amplifier": 1
        }
    },
		"respawn":{
		"type":"origins:action_on_callback",
