		"duration_per_stack":20,
		"min_stacks":0,
		"max_stacks":1,
		"effect":{
			"duration":0,
			"show_particles":false,
			"show_icon":false,
			"effect":"weakness",
			"amplifier":100
		}
	},
	"timer":{
		"type":"origins:action_over_time",
		"interval":1,
		"entity_action":{
			"type":"origins:if_else",
			"condition":{
				"type":"origins:power_active",
				"power":"*:*_toggle"
			},
			"if_action":{
				"type":"origins:change_resource",
				"resource":"*:*_resource",
				"change":-1
			},
			"else_action":{
				"type":"origins:change_resource",
				"resource":"*:*_resource",
				"change":1
			}
		}
	},
	"wither":{
		"type":"origins:stacking_status_effect",
		"min_stacks":0,
		"max_stacks":1,
